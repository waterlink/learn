source 'http://rubygems.org'

gem 'rails', '4.0.2'

# database
gem 'pg'

# frontend
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'turbolinks'
gem 'slim-rails'
gem 'normalize-rails'
gem 'bourbon'
gem 'neat'
gem 'bitters'

# authentication
gem 'devise'

# math
gem 'mathjax-rails'

# test
group :test do
  gem 'minitest-rails'
  gem 'minitest-rails-capybara'
  gem 'simplecov', '~> 0.7.1', require: false
  gem 'sqlite3'
  gem 'mocha'
end
gem 'launchy', require: false, group: :development

# production (heroku)
group :production do
  gem 'rails_serve_static_assets'
  gem 'rails_12factor'
end

# api
gem 'jbuilder', '~> 1.2'

# web-server
gem 'puma', require: false
gem 'foreman', require: false, group: :development

